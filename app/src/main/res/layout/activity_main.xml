<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.tufts.cs.flippr.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/BasicList"
            tools:listitem="@android:layout/simple_list_item_2"
            android:layout_gravity="top"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:baselineAligned="false"
            android:weightSum="1"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <Button android:text="Home" android:layout_height="match_parent"
                android:id="@+id/HomeButton" android:layout_width="0dp"
                android:layout_weight=".25"
                android:textSize="12dp" />

            <Button android:text="Posts" android:layout_height="match_parent"
                android:id="@+id/PostsButton" android:layout_width="0dp"
                android:layout_weight=".25"
                android:textSize="12dp" />
            <Button android:text="Map" android:layout_height="match_parent"
                android:id="@+id/MapButton" android:layout_width="0dp"
                android:layout_weight=".25"
                android:textSize="12dp" />
            <Button android:text="Settings" android:layout_height="match_parent"
                android:id="@+id/SettingsButton" android:layout_width="0dp"
                android:layout_weight=".25"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
